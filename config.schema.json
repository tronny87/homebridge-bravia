{
  "pluginAlias": "BraviaPlatform",
  "pluginType": "platform",
  "headerDisplay": "Please see this documentation for the first setup: https://github.com/normen/homebridge-bravia#installation",
  "footerDisplay": "For documentation please see https://github.com/normen/homebridge-bravia",
  "schema": {
    "tvs": {
      "title": "Registered TVs",
      "required": false,
      "type": "array",
      "items": {
        "name": "TV Config",
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "description": "The name of your TV in HomeKit",
            "type": "string",
            "required": true
          },
          "ip": {
            "title": "IP / Hostname",
            "description": "The IP address or host name of your TV, find/set in your router",
            "type": "string",
            "required": true
          },
          "port": {
            "title": "Port number",
            "description": "HTTP port of the TV, usually not required",
            "type": "number",
            "required": false
          },
          "serverPort": {
            "title": "PIN entry server port",
            "description": "HTTP port of the web server that is started for PIN entry, default 8999",
            "type": "number",
            "required": false
          },
          "mac": {
            "title": "MAC address",
            "description": "MAC address of the TV, only required when using WOL",
            "type": "string",
            "required": false
          },
          "soundoutput": {
            "title": "Sound Output",
            "description": "Usually speaker or headphone",
            "type": "string",
            "default": "speaker",
            "oneOf": [
              { "title": "Speaker", "enum": ["speaker"] },
              { "title": "Headphone", "enum": ["headphone"] }
            ],
            "required": false
          },
          "tvsource": {
            "title": "TV Source",
            "description": "Select TV input to display TV channels in the input list",
            "type":"string",
            "oneOf": [
              { "title": "Satellite", "enum": ["tv:dvbs"] },
              { "title": "Antenna", "enum": ["tv:dvbt"] },
              { "title": "Cable", "enum": ["tv:dvbc"] }
            ],
            "required": false
          },
          "applications": {
            "title": "Listed Apps",
            "description": "Leave empty to not list TV apps in the input list, add app names to show those apps",
            "type": "array",
            "items":{
              "name": "Listed App",
              "type": "object",
              "properties": {
                "title": {
                  "title": "App Name",
                  "description":"a part of the name should suffice",
                  "type": "string"
                }
              }
            },
            "required": false
          },
          "sources": {
            "title": "Listed Sources",
            "description":"Defaults to: extInput:hdmi, extInput:component, extInput:scart, extInput:cec, extInput:widi, add entries to the list below to only show those inputs.",
            "type": "array",
            "required": false,
            "items":{
              "title": "Source Name",
              "type": "string"
            }
          }
        }
      }
    }
  },
  "form": [
    {
      "key":"tvs",
      "items":[
        "tvs[].name",
        "tvs[].ip",
        "tvs[].tvsource",
        "tvs[].soundoutput",
        "tvs[].port",
        "tvs[].mac",
        "tvs[].serverPort",
        {
          "key":"tvs[].applications",
          "items":[
            {
              "key":"tvs[].applications[]",
              "items":[
                "tvs[].applications[].title"
              ]
            }
          ]
        },
        {
          "key":"tvs[].sources",
          "items":["tvs[].sources[]"]
        }
      ]
    }
  ]
}
